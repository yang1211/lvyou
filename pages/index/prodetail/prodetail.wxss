/* pages/prodetail/prodetail.wxss */
swiper{
  width: 100%;
  height: 400rpx;
  position: relative;
}
swiper image{
  display: block;
  height: 100%;
  width: 100%;
}
.clearfix:after{
content:".";
display:block;
height:0;
clear:both;
visibility:hidden;
}
.swiperView {
  height: 350rpx;
  background: #ddd;
  width: 100%;
}
.tuanhao{
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  position: absolute;
  top: 362rpx;
  left: 0;
  width:97%;
  font-size:14px;
  padding-left: 10px; 
}
.titleDec{
  margin: 6px 10px;
}
.titleDec .title{
  display: block;
  font-size: 16px;
  margin-bottom: 5px;
}
.place{
  color: #e95f40;
  font-size: 16px;
  font-weight: 600;
  margin-right: 10px;
}
.out{
  font-size: 12px;
  color: gray;
}
.line{
  border-bottom: 8px solid #eaebf0;
}

.swiper-tab{
 width: 100%;
 border-bottom: 2rpx solid #777777;
 text-align: center;
 line-height: 80rpx;
}
.swiper-tab-list{
 font-size: 30rpx;
 display: inline-block;
 width: 20%;
 color: #777777;
 margin-right: 4%;
 margin-left: 4%;
}
.on{
 color: #da7c0c;
 border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{
 display: block;
 height: 100%;
 width: 100%;
 overflow: hidden;
}
.swiper-box view{
 text-align: center;
}
.swiper-item{
  width: 30%!important;
  height:79%!important;
  margin-right:20px!important; 
  position: none!important;
  display: inline-block;
  border: 1px solid rgb(192, 190, 190);
  border-radius: 15px;
  text-align: center;
  font-size: 14px;
  color: rgb(131, 131, 131);
}
.swiper-box swiper-item .time{
  display: block;
}
.group-title{
  font-size: 16px;
  margin: 10px;
}
._left{
  color: #e95f40;
  border-color: #e95f40;
}
.plan{
  font-size: 12px;
  color: rgb(131, 131, 131);
  margin:10px;
}
.characteristic{
  margin: 10px;
  padding-bottom: 10px;
  font-size: 16px;
  color: #e95f40;
  font-weight: 600;
  display: block;
  border-bottom: 1px solid rgb(201, 201, 201);
}
.charaDec{
  font-size: 14px;
  display: block;
  margin: 0 10px 10px;
}
.day{
  font-weight: 600;
  display: block;
  background-color: rgb(204, 11, 11);
  text-align: center;
  width: 100px;
  border-radius:0 0 8px 8px;
  height: 30px;
  line-height: 30px;
  margin: auto;
  color: #fff;
  font-size: 16px;
}
.content{
  margin:10px;
  font-size: 14px;
  display:block;
}
.height{
  height: 40px;
  display: block;
}
.footer{
  border-top: 2px solid #d3d3d3;
  background: #fff;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 47px;
  line-height: 47px;
  width: 100%;
}
.footer image{
  margin:5px 20px 0;
  width:40px;
  height:40px;
}
.now{
  float: right;
  font-size: 14px;
  width: 57%;
  background: rgb(204, 11, 11);
  color: #fff;
  text-align: center;
}
